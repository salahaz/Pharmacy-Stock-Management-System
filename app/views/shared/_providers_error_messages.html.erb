<% if @provider.errors.any? %>
  <div id="error_explanation">
    <div class="alert alert-danger">
      Le document contient <%= pluralize(@provider.errors.count, "erreur") %>.
    </div>
    <ul>
    <% @provider.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  </div>
<% end %>