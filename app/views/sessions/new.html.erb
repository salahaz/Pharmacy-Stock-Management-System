<% provide(:title, "Se Connecter") %>
<div class="col-sm-4" id="login_panel">
	<%= link_to image_tag("pharmacy.png", alt:"Pharmacy logo"), login_path, class: "center-block img-responsive img-center" %>			
	<div class="form">
		<%= form_for(:session, url: login_path) do |f| %>

			<%= f.label :name %>
			<%= f.text_field :name, class: "form-control", id: "id", placeholder: "ID" %>

			<%= f.label :password %>
			<%= f.password_field :password, class: 'form-control', id: "pwd", placeholder: "Password" %>

			<!-- div class="form-check">
				<label class="form-check-label">
					<input type="checkbox" class="form-check-input">
					Remember me
				</label>
			</div> -->
			<%= f.submit "Log in", class: "btn btn-block center-block", id: "submit_btn" %>
		<% end %>
	</div>
</div>
				