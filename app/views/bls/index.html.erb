<% provide(:title, 'Bons de Livraison') %>

<%= will_paginate %>

<table class="table table-striped table-hover">
  <thead class="thead-dark">
  	<tr>
  		<th scope="col">#</th>
  		<th scope="col">ID du Fournisseur</th>
  		<th scope="col">ID de la commande</th>
  		<th scope="col">ID de l'utilisateur</th>
  		<th scope="col">Prix d'achat final</th>
  	</tr>
  </thead>
  <tbody>
  	<% @bls.each_with_index do |bl, n| %>
  		<tr>
  			<th scope="row"><%= n %></th>
    		<td>
      			<%= link_to bl.provider_id, bl %>
    		</td>
    		<td>
    			<%= link_to bl.order_id, bl %>
   		 	</td>
   		 	<td>
    			<%= link_to bl.user_id, bl %>
   		 	</td>
   		 	<td>
    			<%= link_to bl.finalpph, bl %>
   		 	</td>
   		</tr>
  	<% end %>
  </tbody>
</table>

<%= will_paginate %>